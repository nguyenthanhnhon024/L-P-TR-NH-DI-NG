<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaiKhoan.TaiKhoanFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/avatar"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quân Anh"
                android:textSize="27dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng mới"
                android:textSize="20dp"
                android:textColor="#000000"/>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thecoffeehouserewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Coffee House Rewards"
            android:textColor="#000000"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_stars"
            android:drawablePadding="15dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/thongtintaikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin tài khoản"
            android:textColor="#000000"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_person_outline"
            android:drawablePadding="15dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/nhacdangphat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhạc đang phát"
            android:textColor="#000000"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_queue_music"
            android:drawablePadding="15dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/lichsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch sử"
            android:textColor="#000000"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="15dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/giupdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giúp đỡ"
            android:textColor="#000000"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_support"
            android:drawablePadding="15dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/caidat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textColor="#000000"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="15dp"
            android:padding="12dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dangxuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableStart="@drawable/ic_exit_to_app"
        android:drawablePadding="15dp"
        android:padding="12dp"/>

</LinearLayout>