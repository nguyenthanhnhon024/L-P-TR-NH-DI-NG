<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/gridiconlc"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_bk">

        <ImageView
            android:id="@+id/imgud"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/uu20pt"/>

        <TextView
            android:id="@+id/nameud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgud"
            android:layout_marginTop="3dp"
            android:padding="6dp"
            android:text="Hoàn đến 20%, thèm gì gọi Nhà mang tới liền"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/chitietud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameud"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="Hòa vào không khí siêu sale cuối năm, mời team mình nghỉ tay gọi món yêu thích"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btnchitiet"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Chi tiết"
            android:textSize="16dp"
            android:layout_below="@id/chitietud"
            android:background="@drawable/button_chitiet"
            android:textColor="#E88125"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>


    </RelativeLayout>

</RelativeLayout>