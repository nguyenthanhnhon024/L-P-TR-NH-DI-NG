<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEDED"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/bg_top"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/user"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/btlg"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Đăng Nhập/Đăng Kí"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Ví Voucher"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/voucher"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Thanh toán"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_card"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Ví Voucher"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_map"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"

        >
        <TextView
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Mời bạn bè"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_person"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Trung tâm trợ giúp"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_help"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"

        >
        <TextView
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Ứng dụng cho chủ quán"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_shop"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Chính sách quy định"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_help"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Cài đặt"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_settings"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Về Now"
            android:textColor="#050101"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_warning"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="20dp"
            android:padding="14dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phiên bản 4.29.26"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foody Corporation"
        android:textSize="18sp"
        android:gravity="center" />
</LinearLayout>
</ScrollView>
