<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FBFBFB"
    android:paddingHorizontal="15dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duyexample.passiocoffee.Activity.ProfileActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginBottom="20dp"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/avatar" />
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xuân Duy"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0772512251"
            android:textColor="#707070"
            android:textSize="18sp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành viên mới (Green)"/>
            <TextView
                android:layout_marginBottom="20dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#afcb07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 điểm"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản Passio point"/>
            <TextView
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#afcb07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 P"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_acc"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Thông tin cá nhân"/>
            <TextView
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_location"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Địa chỉ giao hàng"/>
            <TextView
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_tag"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Coupon của tôi"/>
            <TextView
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_history"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Lịch sử đặt hàng"/>
            <TextView
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_about"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Về chúng tôi"/>
            <TextView
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_phone"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Liên hệ"/>
            <TextView
                android:id="@+id/logoff"
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_log"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Đăng xuất"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hotline: 1900 9434"
        android:textAlignment="center"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="©2018 Passio Coffee. Ver 1.07"
        android:textAlignment="center"
        android:textSize="16sp"/>
</LinearLayout>