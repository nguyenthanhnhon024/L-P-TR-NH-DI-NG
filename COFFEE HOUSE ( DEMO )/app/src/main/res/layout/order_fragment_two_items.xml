<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/order_fragment_one_items_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/ORDER_FRAGMENT_TWO_ITEMS_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_height = "wrap_content"
                android:layout_width = "wrap_content"
                android:elevation = "10dp"
                app:cardCornerRadius = "10dp"
                >

                <ImageView
                    android:id="@+id/ORDER_FRAGMENT_TWO_ITEMS_IV"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight = "10dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:fontFamily="@font/open_sans"
                        android:id="@+id/ORDER_FRAGMENT_TWO_ITEMS_TV_TITLE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Title"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />

                    <View
                        android:background = "#95A5A6"
                        android:layout_height = "1dp"
                        android:layout_marginTop="5dp"
                        android:layout_width = "match_parent"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum = "5"
                        >

                        <TextView
                            android:fontFamily="@font/open_sans"
                            android:id="@+id/ORDER_FRAGMENT_TWO_ITEMS_TV_PRICE"
                            android:layout_weight = "5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Price"
                            android:textColor="#000"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star"
                            />
                        <TextView
                            android:id="@+id/ORDER_FRAGMENT_TWO_ITEMS_TV_STAR"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Star"
                            android:textSize="12dp"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_height = "25dp"
                            android:layout_width = "25dp"
                            android:src = "@drawable/icon_add_circle_outline"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>