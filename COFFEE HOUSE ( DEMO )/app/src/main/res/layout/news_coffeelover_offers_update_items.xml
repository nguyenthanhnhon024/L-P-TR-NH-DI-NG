<?xml
    version = "1.0"
    encoding = "utf-8"
?>

<LinearLayout
    android:layout_height = "wrap_content"
    android:layout_width = "wrap_content"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background = "@drawable/news_coffeelover_offers_update_items_background"
        android:layout_height = "340dp"
        android:layout_width = "260dp"
        android:orientation = "vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_height = "wrap_content"
            android:layout_width = "match_parent"
            android:elevation = "10dp"
            app:cardCornerRadius = "10dp"
            >

            <ImageView
                android:id = "@+id/NEWS_OFFERS_ITEMS_IV"
                android:layout_gravity = "center"
                android:layout_height = "140dp"
                android:layout_width = "match_parent"
                android:scaleType = "fitXY"
                android:src = "@mipmap/ic_launcher"
            />
        </androidx.cardview.widget.CardView >

        <TextView
            android:fontFamily = "@font/open_sans"
            android:id = "@+id/NEWS_OFFERS_ITEMS_TV_01"
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "15dp"
            android:layout_marginRight = "15dp"
            android:layout_marginTop = "15dp"
            android:layout_width = "match_parent"
            android:text = "Text"
            android:textAlignment = "textStart"
            android:textColor = "#000"
            android:textSize = "16.5dp"
            android:textStyle = "bold"
        />

        <TextView
            android:fontFamily = "@font/open_sans"
            android:id = "@+id/NEWS_OFFERS_ITEMS_TV_02"
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "15dp"
            android:layout_marginRight = "15dp"
            android:layout_marginTop = "5dp"
            android:layout_width = "match_parent"
            android:text = "Text"
            android:textColor = "#000"
            android:textSize = "15.5dp"
        />

        <RelativeLayout
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "20dp"
            android:layout_marginBottom = "20dp"
            android:layout_width = "wrap_content"
            >
            <Button
                android:background = "@drawable/button_border"
                android:hint = "Chi tiáº¿t"
                android:id = "@+id/NEWS_OFFERS_ITEMS_B_DETAIL"
                android:layout_alignParentBottom = "true"
                android:layout_height = "40dp"

                android:layout_width = "120dp"
                android:textColorHint = "#FF9800"
                android:textSize = "15sp"
            />
        </RelativeLayout>
    </LinearLayout >
</LinearLayout >