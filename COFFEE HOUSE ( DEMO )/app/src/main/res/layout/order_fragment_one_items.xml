<?xml
    version = "1.0"
    encoding = "utf-8"
?>

<RelativeLayout
    android:layout_height = "wrap_content"
    android:layout_width = "wrap_content"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    >

    <LinearLayout
        android:background = "@drawable/order_fragment_one_items_background"
        android:id = "@+id/ORDER_FRAGMENT_ONE_ITEMS_RL"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_height = "wrap_content"
            android:layout_width = "match_parent"
            android:elevation = "10dp"
            app:cardCornerRadius = "10dp"
            >

            <ImageView
                android:id = "@+id/ORDER_FRAGMENT_ONE_ITEMS_IV"
                android:layout_gravity = "center"
                android:layout_height = "150dp"
                android:layout_width = "match_parent"
                android:scaleType = "fitXY"
                android:src = "@mipmap/ic_launcher"
            />
        </androidx.cardview.widget.CardView >

        <TextView
            android:fontFamily = "@font/open_sans"
            android:id = "@+id/ORDER_FRAGMENT_ONE_ITEMS_TV_TITLE"
            android:layout_height = "45dp"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"
            android:layout_marginTop = "13dp"
            android:layout_width = "match_parent"
            android:text = "TITLE"
            android:textAlignment = "center"
            android:textColor = "#000"
            android:textSize="16dp"
            android:textStyle = "bold"
        />

        <View
            android:background = "#95A5A6"
            android:layout_height = "1dp"
            android:layout_marginTop = "10dp"
            android:layout_width = "match_parent"
        />

        <LinearLayout
            android:gravity = "center"
            android:layout_height = "wrap_content"
            android:layout_marginBottom = "10dp"
            android:layout_marginLeft = "15dp"
            android:layout_marginRight = "10dp"
            android:layout_marginTop = "10dp"
            android:layout_width = "match_parent"
            android:orientation = "horizontal"
            android:weightSum = "5"
            >

            <TextView
                android:fontFamily = "@font/open_sans"
                android:id = "@+id/ORDER_FRAGMENT_ONE_ITEMS_TV_PRICE"
                android:layout_centerHorizontal = "true"
                android:layout_weight = "5"
                android:layout_height = "wrap_content"
                android:layout_width = "wrap_content"
                android:text = "PRICE"
                android:textColor = "#000"
                android:textSize = "16dp"
                android:textStyle = "bold"
            />

            <ImageView
                android:layout_height = "25dp"
                android:layout_width = "25dp"
                android:src = "@drawable/icon_add_circle_outline"
            />
        </LinearLayout >
    </LinearLayout >
</RelativeLayout >